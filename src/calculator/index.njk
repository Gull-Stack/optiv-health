<script>
function calculate() {
  const employees = parseInt(document.getElementById('calc-employees').value) || 0;
  const participation = parseFloat(document.getElementById('calc-participation').value);
  const participating = Math.round(employees * participation);
  
  // Savings assumptions
  const avgSavingsPerEmployee = 750;
  const monthlyPremium = 100; // Assumed avg premium
  const ficaRate = 0.0765;
  
  // Calculate
  const totalSavings = participating * avgSavingsPerEmployee;
  const ficaSavings = Math.round(participating * monthlyPremium * 12 * ficaRate);
  const claimsSavings = Math.round(totalSavings * 0.4); // 40% comes from claims reduction
  
  // Employee benefits
  const rxValue = participating * 400; // Avg prescription savings
  const telehealthValue = participating * 150; // Avg telehealth savings
  const taxPerEmployee = Math.round(monthlyPremium * 12 * 0.22); // ~22% marginal rate
  
  // Update display
  document.getElementById('result-total').textContent = '$' + totalSavings.toLocaleString();
  document.getElementById('result-fica').textContent = '$' + ficaSavings.toLocaleString();
  document.getElementById('result-claims').textContent = '$' + claimsSavings.toLocaleString();
  document.getElementById('emp-rx').textContent = '$' + rxValue.toLocaleString() + '/yr';
  document.getElementById('emp-telehealth').textContent = '$' + telehealthValue.toLocaleString() + '/yr';
  document.getElementById('emp-tax').textContent = '$' + taxPerEmployee + '/yr';
}

document.getElementById('calc-employees').addEventListener('input', calculate);
document.getElementById('calc-participation').addEventListener('change', calculate);
</script>
